<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ISRTC Suite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="com.isrtc.listeners.TestListener" />
    </listeners>

    <!-- ========================= -->
    <!--        SANITY SUITE       -->
    <!-- ========================= -->
    <test name="Sanity Tests" parallel="methods" thread-count="3">
        <groups>
            <run>
                <include name="sanity" />
            </run>
        </groups>

        <classes>
            <class name="com.isrtc.tests.TC001_SearchWithValidData" />
            <class name="com.isrtc.tests.TC002_BoardingAndDropping_Selection" />
            <class name="com.isrtc.tests.TC003_ContactDetails_ValidData" />
        </classes>
    </test>

    <!-- ========================= -->
    <!--      REGRESSION SUITE     -->
    <!-- ========================= -->
    <test name="Regression Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>

        <classes>
            <class name="com.isrtc.tests.TC004_CompleteFlow_OneWayBooking" />
        </classes>
    </test>

</suite>
